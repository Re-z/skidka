mixin pagination(className)
	.pagination(class=className)
		a(href="#").prev-medium.pagination__prev
		a(href="#").next-medium.pagination__next
		ul.pagination__list
			- var paginationItems = ['1', '2', '3', '4', '5', '6', '7', '...', '56']
			each item in paginationItems
				if item === '2'
					li: a(class="is-active" href="#")=item
				else
					li: a(href="#")=item




